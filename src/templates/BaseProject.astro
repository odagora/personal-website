---
import { ProjectDetails } from '@/partials';
import Base from '@/templates/Base.astro';
import type { IProjectFrontmatter } from '@/types/IProjectFrontMatter';
import { AppConfig } from '@/utils';

export interface Props {
  content: IProjectFrontmatter;
}

const { content } = Astro.props as Props;
const title = `${content.name} - ${AppConfig.site_name}`;
const type = 'website';
---

<Base head={{ title, description: content.description, type }}>
  <ProjectDetails frontmatter={content}>
    <slot></slot>
  </ProjectDetails>
</Base>
